local Char = game.Players.LocalPlayer.Character.HumanoidRootPart

local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

local Window = OrionLib:MakeWindow({Name = "???? Hub", HidePremium = false, SaveConfig = true, ConfigFolder = "fr"})

local Tab = Window:MakeTab({
	Name = "Main",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

Tab:AddLabel("You can turn on both of the functions for the best efficiency")

local Section = Tab:AddSection({
	Name = "Farming"
})

function autocoin()
    pcall(function()
        while _G.autocoin == true do
            for i, v in pairs(game.Workspace.Coins:GetDescendants()) do
                if v:IsA("MeshPart") then
                    wait()
                    Char.CFrame = v.CFrame
                end
            end
        end
    end)
end

Tab:AddToggle({
	Name = "Auto Farm Coins",
	Default = false,
	Callback = function(Value)
		_G.autocoin = (Value)
        autocoin()
	end    
})

function autocoin2()
    pcall(function()
        while _G.autocoin2 == true do
            wait()
            game:GetService("ReplicatedStorage").CoinToPlayer:FireServer(2)               
        end
    end)
end

Tab:AddToggle({
	Name = "Auto Farm Coins (Method 2)",
	Default = false,
	Callback = function(Value)
		_G.autocoin2 = (Value)
        autocoin2()
	end    
})

function autosell()
    pcall(function()
        while _G.autosell == true do
            wait()
            game:GetService("ReplicatedStorage").Remotes.Sell:FireServer()
        end
    end)
end

Tab:AddToggle({
	Name = "Auto Sell",
	Default = false,
	Callback = function(Value)
		_G.autosell = (Value)
        autosell()
	end    
})

local Section = Tab:AddSection({
	Name = "Things"
})

Tab:AddLabel("Made By Thomasu#0427")
Tab:AddLabel("no steall!!! ðŸ˜¡ðŸ˜¡")

OrionLib:Init()
